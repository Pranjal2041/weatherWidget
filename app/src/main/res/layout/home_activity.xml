<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".HomeActivity">

<!--.........................................................................-->

    <ScrollView

        android:id="@+id/scroll_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/card_preview">

    </ScrollView>

<!--.........................................................................-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_preview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/card_bottomBar"
        app:cardCornerRadius="0dp"
        app:cardElevation="10dp"
        app:cardMaxElevation="20dp">

        <LinearLayout
            android:id="@+id/preview_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pixel_wallpaper"
            android:orientation="vertical" />
    </android.support.v7.widget.CardView>

<!--.........................................................................-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:background="@drawable/bg1"
            android:id="@+id/layout_bottom"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_alignParentStart="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weather Widget"
                    android:textSize="25sp"
                    android:textColor="#2D04D6"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/googlesans_bold"
                    />
                <Spinner
                    android:id="@+id/simpleSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>