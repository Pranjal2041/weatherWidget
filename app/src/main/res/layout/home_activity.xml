<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".HomeActivity">
    <!--app:bar_primaryColor="#000000"-->
    <!--app:bar_primaryColorDark="#000000"-->
    <com.github.florent37.awesomebar.AwesomeBar
        android:layout_marginTop="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        app:bar_actionsColor="@color/eo_green"
        app:bar_primaryColor="@color/eo_dblue"
        app:bar_primaryDarkColor="@color/eo_dblue"
        android:background="@color/eo_dblue"
        android:elevation="0dp"
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <!--..........................PART 1.........................................-->

    <LinearLayout
        android:layout_below="@+id/bar"
        android:layout_marginTop="0dp"
        android:id="@+id/recycler_ll"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/bg1">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"></android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <!--..........................PART 2.........................................-->

    <ScrollView
        android:layout_marginTop="20dp"
        android:id="@+id/scroll_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/recycler_ll"
        android:layout_above="@+id/card_bottomBar">
        <include layout="@layout/m_editwidget"/>
    </ScrollView>

    <!--..........................PART 3.........................................-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Weather Widget"
                    android:textColor="@color/eo_yellow"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/simpleSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>