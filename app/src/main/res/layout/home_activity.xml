<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".HomeActivity">

    <!--..........................PART 1.........................................-->

    <ScrollView

        android:id="@+id/scroll_contain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/recycler_ll">

    </ScrollView>

    <!--..........................PART 2.........................................-->

    <LinearLayout
        android:id="@+id/recycler_ll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_above="@+id/card_bottomBar"
        android:background="@drawable/bg1">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!--    <LinearLayout
                    android:id="@+id/preview_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/pixel_wallpaper"
                    android:orientation="vertical" />-->
        </android.support.v7.widget.RecyclerView>

    </LinearLayout>


    <!--..........................PART 3.........................................-->

    <android.support.v7.widget.CardView
        android:id="@+id/card_bottomBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg1"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Weather Widget"
                    android:textColor="#2D04D6"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/simpleSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:textAlignment="textEnd" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>