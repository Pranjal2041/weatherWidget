<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_dblue"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/font_card1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/eo_green"
        app:cardElevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/font_spinner"
                android:layout_width="240dp"
                android:layout_height="60dp">

            </android.support.v7.widget.AppCompatSpinner>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/font_card2"
        android:layout_marginStart="300dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/eo_green"
        app:cardElevation="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/font_spinner2"
                android:layout_width="90dp"
                android:layout_height="60dp">

            </android.support.v7.widget.AppCompatSpinner>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_marginTop="100dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/font_colour_fab"
                android:layout_width="93dp"
                android:layout_height="66dp"
                android:src="@drawable/baseline_color_lens_black_18dp">

            </android.support.design.widget.FloatingActionButton>
        </RelativeLayout>
</RelativeLayout>