<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cards"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="20dp">

    <LinearLayout
        android:id="@+id/cards_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wall_pixel2"
        android:orientation="horizontal">

        <include
            android:id="@+id/include_pixel"
            layout="@layout/pixel_widget"
            android:visibility="visible" />

        <include
            android:id="@+id/include_op_v1"
            layout="@layout/op_v1_widget"
            android:visibility="visible" />

        <include
            android:id="@+id/include_op_v2"
            layout="@layout/op_v2_widget"
            android:visibility="gone" />


    </LinearLayout>
</android.support.v7.widget.CardView>